<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <Button
        android:id="@+id/open_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deposit_amount_input"
        app:layout_constraintVertical_bias="0.35" />

    <EditText
        android:id="@+id/account_name_input"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Account Name"
        android:textColor="@color/colorText"
        android:textColorHighlight="@color/colorBlue"
        app:layout_constraintBottom_toTopOf="@+id/deposit_amount_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/deposit_label"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="deposit"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/deposit_amount_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/deposit_amount_input" />

    <EditText
        android:id="@+id/deposit_amount_input"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:ems="10"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:shadowColor="#FFFFFF"
        android:singleLine="true"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/spaghetti_label"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="spaghetti,"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deposit_amount_input"
        app:layout_constraintTop_toTopOf="@+id/deposit_amount_input" />

    <TextView
        android:id="@+id/from_label"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="from"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/from_account_spinner"
        app:layout_constraintEnd_toStartOf="@+id/vertical_divider"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/from_account_spinner"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/vertical_divider"
        app:layout_constraintTop_toBottomOf="@+id/deposit_amount_input" />

    <View
        android:id="@+id/horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vertical_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>